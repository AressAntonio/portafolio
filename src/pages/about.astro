<style>

    .aboutme{
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 200px;

        padding: 10px 50px;

        
        
    }
   
    .aboutme .info{
    width: 340px;
    min-height: 400px;
    max-height: auto;
    background-color: #222;
    border-radius: 20px;
    color: white;
    padding: 20px;
    box-sizing: border-box;
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.2);
    flex-direction: column;

    animation: 1.5s ring linear;
    }

    .aboutme .info a{
    color: white;
    text-decoration: none;

    }
    
    .aboutme .info a:hover{
    text-decoration: underline;
    color: #9ae6b4;
    }

    .aboutme .info .header{
    display: flex;
    justify-content: space-between;
    
    }

    .aboutme .info .header img{
    width: 60px;
    height: 60px;
    background-color: #222;
    border-radius: 50%;
    border: solid 4px #9ae6b4;
    }

    .aboutme .info .header button{
    min-width: 100px;
    padding: 10px;
    border-radius: 20px;
    background-color: white;
    border: none;
    cursor: pointer;
    font-weight: bold;
    color: black;
    }

   .aboutme .info .header button:hover{
    background-color: #9ae6b4;
    color: white;
  }

 .aboutme .info .user-info{
    padding: 10px 0;
  }

 .aboutme .info .user-info .name{
    font-weight: bolder;
  }

 .aboutme .info .user-info .user-name{
    color: #aaa;
  }

 .aboutme .info .description{
    padding: 10px  0 2px 0;
    flex: 1;
  }

 .aboutme .info .description a{
    color: #ff9776;
    text-decoration: none;
  }

 .aboutme .info .description a:hover{
    text-decoration: underline;
    color: #ff9776
  }

 .aboutme .info .followers-container{
    gap: 10px;
    padding: 10px 0;
    display: flex;
    justify-content: space-between;
    
  }

 .aboutme .info .followers-container a{
    color: #aaa;
  }


 .aboutme .info .followers-container .number{
    font-weight: bolder;
    color: white;
  }


 .aboutme .info .other{
    padding: 10px 0;
  }

 .aboutme .info .other a{
    color: #777;
    display: flex;
  }

 .aboutme .info .other a .photos{
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-start;
    margin-right: 25px;
  }

 .aboutme .info .other a .photos img{
    width: 30px;
    height: 30px;
    background-color: #222;
    border: solid 2px #ccc;
    margin-right: -20px;
  }

 .aboutme .info .other a .photos img:hover{
    transform: translateY(-9px);
  }

  /*span{
    background-color: #ff9776;
    padding: 2px;
    border-radius: 12px;
    font-size: 15px;
    color: #222;
    flex-wrap: wrap;
  }*/
  span a{
    text-decoration: none
  }
  span:hover{
    background-color: #fff;
    color: #222;
    transform: scale(1.1);
    transition: all 0.5s ease;
    cursor: pointer;
  }

  /*Styles of tooltip*/
  .tooltip {
  position: relative;
  display: inline-block;
  /*border-bottom: 1px dotted black;*/
  }

.tooltip .tooltiptext {
  visibility: hidden;
  width: 120px;
  background-color: black;
  color: #fff;
  text-align: center;
  border-radius: 6px;
  padding: 5px 0;
  /* Posicionamiento del tooltip */
  position: absolute;
  z-index: 1;
  bottom: 10%;
  left: 38%;
  margin-left: -60px;
  padding: 3px;
  border: 2px solid #9ae6b4;
  opacity: 0;
   transition: all 0.5s ease;
}

.tooltip:hover .tooltiptext {
  visibility: visible;
  opacity: 1;
  cursor: pointer;
}


@keyframes ring {
    0% {
        animation-timing-function: ease-in;
        opacity: 1;
        transform: translateY(-45px)
    }

    24% {
        opacity: 1
    }

    40% {
        animation-timing-function: ease-in;
        transform: translateY(-24px)
    }

    65% {
        animation-timing-function: ease-in;
        transform: translateY(-12px)
    }

    82% {
        animation-timing-function: ease-in;
        transform: translateY(-6px)
    }

    93% {
        animation-timing-function: ease-in;
        transform: translateY(-4px)
    }

    25%,55%,75%,87% {
        animation-timing-function: ease-out;
        transform: translateY(0)
    }

    to {
        animation-timing-function: ease-out;
        opacity: 1;
        transform: translateY(0)
    }
}
</style>
